@using OdeToFood.Core.Models
@model RestaurantModel

<div class="card">
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3>@Model.Name</h3>
        </div>
        <div class="panel-body">
            <span>Location : @Model.Location</span>
            <span>Location : @Model.Cuisines</span>
        </div>
        <div class="panel-footer">
            <a asp-page="./Edit" asp-route-restaurantId="@Model.Id" class="btn btn-primary">Edi</a>
            <a asp-page="./Detail" asp-route-restaurantId="@Model.Id" class="btn btn-primary">Det</a>
            <a asp-page="./Delete" asp-route-restaurantId="@Model.Id" class="btn btn-primary">Del</a>
        </div>
    </div>
</div>